<% @users.each do |user| %>

	<% if user.id != current_user.id %>
		<div class="card" style="width: 20rem;">
			<img class="card-img-top" src="https://robohash.org/<%=rand(100)%>?set=set2" >
			
			<div class="card-block">
			<%= user.email%>
			<% if (current_user.friends.ids.include?(user.id))%>
			
			<%= link_to "Message", '', class: 'btn btn-primary' %>

			<%else%>
			
			<%= link_to "Add Friend", friendships_path(:friend_id => user), method: :post , class: 'btn btn-secondary'%>
			</div>
			<% end %>
			
		</div>

			
		
		
	<%end%>

<% end %>


